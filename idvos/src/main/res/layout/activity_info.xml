         android:id="@+id/button_facebook"
         android:layout_width="@dimen/info_social_button_size"
         android:layout_height="@dimen/info_social_button_size"
         android:layout_above="@id/button_call"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="@dimen/info_box_margin_vertical"
         android:layout_marginTop="@dimen/info_box_margin_vertical"
         android:layout_marginLeft="@dimen/info_box_margin_horizontal"
         android:layout_marginRight="@dimen/info_box_margin_horizontal"
         android:src="@drawable/ic_launcher"/>

     <ImageView
         android:id="@+id/button_linkedin"
         android:layout_width="@dimen/info_social_button_size"
         android:layout_height="@dimen/info_social_button_size"
         android:layout_alignBottom="@id/button_facebook"
         android:layout_toRightOf="@id/button_facebook"
         android:src="@drawable/ic_launcher"/>

     <ImageView
         android:id="@+id/button_twitter"
         android:layout_width="@dimen/info_social_button_size"
         android:layout_height="@dimen/info_social_button_size"
         android:layout_alignBottom="@id/button_facebook"
         android:layout_toLeftOf="@id/button_facebook"
         android:src="@drawable/ic_launcher"/>
     -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/button_call"
        android:layout_marginBottom="@dimen/info_box_margin_vertical"
        android:background="@drawable/info_divider" />

</RelativeLayout>
